

@model IEnumerable<Tuan6.Models.Product>
@{
    ViewBag.Title = "Favorites";
    int size = Tuan6.Models.Common.Size;
    int page = Tuan6.Models.Common.Page;
    int count = Tuan6.Models.Common.Count;
}

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("select.sl").change(function () {
            var size = $(this).children("option:selected").val();
            window.location = "../Home/Favorites?Page=" + @page + "&Size=" + size;
        });
    });
</script>

<h1>Yêu Thích</h1>


<ul>
    @foreach (var product in Model)
    {
        <li>
            @product.Title ----- @product.Description :
            @product.Price.ToString("N0") Nghìn Đồng
        </li>
    }
</ul>





<div class="container">
    <ul class="pagination">
        @if (count > 1)
        {
            if (page > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="../Home/Favorites?Page=@(page - 1)&Size=@size" aria-label="Previous">
                        <span aria-hidden="true">Lùi trang</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }
            
        if (page < count)
        {
            <li class="page-item">
                <a class="page-link" href="../Home/Favorites?Page=@(page + 1)&Size=@size" aria-label="Next">
                    <span aria-hidden="true">Trang kế</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
            }
        }
    </ul>
</div>